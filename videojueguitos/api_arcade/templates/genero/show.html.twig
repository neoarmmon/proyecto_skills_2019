{% extends 'base.html.twig' %}

{% block title %}Genero{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Genero</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ genero.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ genero.nombre }}</td>
                </tr>
                <tr>
                    <th>Descripcion</th>
                    <td>{{ genero.descripcion }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('app_genero_index') }}" class="btn btn-secondary">Volver a genero</a>
        <a href="{{ path('app_genero_edit', {'id': genero.id}) }}" class="btn btn-primary">Editar</a>
        {{ include('genero/_delete_form.html.twig') }}
    </div>
{% endblock %}
